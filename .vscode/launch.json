    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "npm test",
            "program": "${workspaceFolder}/node_modules/.bin/jasmine",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "themost-framework:*"
            }
        },
        {
            "name": "npm run standalone",
            "program": "${workspaceFolder}/bin/standalone.js",
            "request": "launch",
            "type": "node",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "themost-framework:*"
            },
            "runtimeArgs": [
                "--require",
                "@babel/register"
            ]
        }
    ]
}